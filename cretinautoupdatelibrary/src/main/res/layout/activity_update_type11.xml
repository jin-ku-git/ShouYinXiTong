<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/dialog_bg_type_11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="200dp"
                    android:layout_alignParentRight="true"
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:paddingBottom="20dp"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:src="@mipmap/update_close_img" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:layout_marginRight="60dp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2dp"
                android:textColor="#4b4b4b"
                android:textSize="14sp"
                tools:text="【新增】短视频首页增加今日热门\n【新增】短视频首页增加今日热门\n【新增】短视频首页增加今日热门\n【新增】短视频首页增加今日热门\n【新增】短视频首页增加今日热门\n【新增】短视频首页增加今日热门" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_border_fc8680"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:layout_marginRight="7dp"
                android:paddingTop="7dp"
                android:text="@string/btn_cancel_update"
                android:textColor="#fc8680"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="55dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_marginLeft="7dp"
                android:background="@drawable/shape_btn_round_fe8b80"
                android:gravity="center"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="@string/btn_update_now"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>