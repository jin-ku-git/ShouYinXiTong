<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_cash_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff9a9a9a"
        android:textSize="18sp"
        android:text="金额" />

    <EditText
        android:id="@+id/edit_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_cash_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cash_num"
        app:layout_constraintLeft_toRightOf="@+id/tv_cash_num"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:hint="请输入金额"
        android:textColor="#ffe48013"
        android:textSize="18sp"
        android:inputType="numberDecimal"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cash_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffd8d8d8" />

    <TextView
        android:id="@+id/tv_cash_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cash_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff9a9a9a"
        android:textSize="18sp"
        android:text="项目" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_cash_item"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cash_item"
        app:layout_constraintLeft_toRightOf="@+id/tv_cash_item"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:background="@null"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cash_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffd8d8d8" />


    <TextView
        android:id="@+id/tv_cash_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cash_item"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff9a9a9a"
        android:textSize="18sp"
        android:text="备注" />

    <EditText
        android:id="@+id/edit_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_cash_memo"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cash_memo"
        app:layout_constraintLeft_toRightOf="@+id/tv_cash_memo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:hint="请输入您想备注的内容"
        android:textColor="#ff9a9a9a"
        android:textSize="18sp"
        android:background="@null"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cash_memo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ffd8d8d8" />

</androidx.constraintlayout.widget.ConstraintLayout>