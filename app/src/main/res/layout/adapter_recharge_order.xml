<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.youwu.shouyinxitong.ui.record.RechargeOrdersListItemViewModel" />

        <variable
            name="viewModel"
            type="RechargeOrdersListItemViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="52.66dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_seq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="@{viewModel.getPosition()+1+@string/Textnull}"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_vip_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="@{viewModel.entity.user_name+(viewModel.getPosition()+1)}"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ï¿¥15.00"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_order_coupon_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="111"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_order_coupon_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="111"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="111"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cashier_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="111"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_add_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:text="111"
                android:textColor="#FF9A9A9A"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ffd8d8d8" />

    </LinearLayout>
</layout>