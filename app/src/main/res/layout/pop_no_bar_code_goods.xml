<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:background="@mipmap/dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dp_10"
            android:text="无码商品"
            android:textColor="@color/main_hue"
            android:textSize="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/closed"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/closed_icon" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_lift_background"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="价格"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cir_red_right_kong"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text=""
            android:id="@+id/price"
            android:textColor="@color/main_hue"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:id="@+id/keymap_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="2"
                        android:id="@+id/keymap_2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="3"
                        android:id="@+id/keymap_3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="4"
                        android:id="@+id/keymap_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="5"
                        android:id="@+id/keymap_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="6"
                        android:id="@+id/keymap_6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="7"
                        android:id="@+id/keymap_7"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="8"
                        android:id="@+id/keymap_8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="9"
                        android:id="@+id/keymap_9"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:id="@+id/keymap_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="."
                        android:id="@+id/keymap_point"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    app:cardElevation="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="DEL"
                        android:id="@+id/keymap_del"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_weight="1"
            app:cardElevation="@dimen/dp_4"
            app:cardBackgroundColor="@color/main_hue"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_4"
                android:gravity="center"
                android:text="确\n定"
                android:id="@+id/keymap_sure"
                android:textColor="@color/white"
                android:textSize="22sp" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>