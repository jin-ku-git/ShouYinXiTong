<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_setting_layout"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="播放视频"
                android:textSize="16sp"
                android:gravity="center|left"
                android:paddingLeft="10dp"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/video_sbutton"
                android:layout_gravity="center_vertical"
                android:layout_width="65dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="播放图片"
                android:textSize="16sp"
                android:gravity="center|left"
                android:paddingLeft="10dp"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/image_sbutton"
                android:layout_gravity="center_vertical"
                android:layout_width="65dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/switching_time_liner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_border">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="图片切换时间"
                android:textSize="16sp"
                android:gravity="center|left"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/switching_time_tv"
                android:layout_marginRight="15dp"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5秒"
                android:textSize="20sp"
                android:textColor="@color/blue_3c89ff"
                android:drawableRight="@mipmap/back_right"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>